@model List<practice_C_.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Users DataTable-->
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card bg-white">
            <div class="card-body mt-3">
                <div class="table-responsive">
                    <table id="roleTable" class="table table-striped table-borderless" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Created date</th>
                                <th>Order</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@(item.CreatedDate.HasValue ? @item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                    <td>@item.Order.GetValueOrDefault(0)</td>
                                    <td>@(item.Status.GetValueOrDefault(false)?"Active":"Blocked")</td>
                                </tr>
                            }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

